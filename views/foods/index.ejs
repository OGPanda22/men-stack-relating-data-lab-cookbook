<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/:userId/foods/new">Add New Item</a>
    <ul>
      <% foods.forEach((food)=>{ %>
      <li>
          <a href="/users/<%= user._id %>/foods/<%= food._id %>">
          Item: <%= foods.name %> , Quantity: <%= foods.quantity %> , Expiration Date: <%= foods.expiration %>
          </a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
